{
  "name": "kirby-stats",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "ddev start && npm run dev",
    "dev": "kirbyup serve src/index.ts",
    "build": "kirbyup src/index.ts && esbuild ./src/stats.js --minify --format=iife  --outfile=stats.js",
    "format": "prettier --write .",
    "test": "./vendor/bin/pest",
    "test:format": "prettier --check .",
    "release": "bumpp composer.json"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*": "prettier --write"
  },
  "keywords": [],
  "author": "Arno Schlipf",
  "license": "MIT",
  "devDependencies": {
    "@prettier/plugin-php": "^0.24.0",
    "bumpp": "10.0.0",
    "esbuild": "^0.25.5",
    "kirbyup": "^3.0.0",
    "kirbyuse": "^0.12.1",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0"
  },
  "dependencies": {
    "chartist": "^1.3.1"
  }
}
